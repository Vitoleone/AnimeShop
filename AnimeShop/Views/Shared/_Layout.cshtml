@using AnimeShop.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*<link href="~/css/styles.css" rel="stylesheet" />*@
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anime Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-7">
                        <li class="nav-item dropdown">
                            <li  class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TumUrunler" asp-action="Index">Tüm Ürünler</a>
                            </li>
                            <li  class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FigurUrunler" asp-action="Index">Figür</a>
                            </li>
                            <li  class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CosplayUrunler" asp-action="Index">Cosplay</a>
                            </li>
                            <li  class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MangaUrunler" asp-action="Index">Manga</a>
                            </li>
                        </li>
                        @if(User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Urun" asp-action="Index">Urun</a></li> @*ürün controllerın index.cshtml sine gidecek*@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Kategori" asp-action="Index">Kategori</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Fotograf" asp-action="Index">Fotoğraf</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="IndirimliUrunler" asp-action="Index">İndirimli Ürünler</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Kampanya" asp-action="Index">Kampanya</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Siparis" asp-action="Index">Sipariş</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="SiparisDetay" asp-action="Index">Siparis Detay</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Index">Rol Olusturma</a></li>
                                
                            </ul>
                            </li>
                        }

                         
                    </ul>
                    <partial name="_LoginPartial" />
                    
                    @if(User.Identity.IsAuthenticated == true)
                    {
                        <form class="d-flex">
                        <button class="btn btn-outline-dark" asp-area="" asp-controller="Sepet" asp-action="Index">
                            <i class="bi-cart-fill me-1"></i>
                            Sepet
                        </button>
                        </form>
                    }
            


                        
                </div>
            </div>
        </nav>
    <header class="bg-primary py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Anime Shop</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Anime hakkında her ürün.</p>
                </div>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 <footer class="py-3 bg-dark" style="bottom:0;position: fixed; width:100%;">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Anime Shop 2022</p></div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
